@page
@model ServerApp.Pages.LoginModel
@{
    Layout = "../Shared/_Layout";
}

@section H1 { <h1>Login</h1> }

@if (Model.ErrorMessage.Length > 0)
{
    <p class=error>@Model.ErrorMessage</p>
}

<form method=post asp-route-returnurl="@ViewData["ReturnUrl"]">
    <label asp-for="UserLogin.Email">Email</label><br>
    <input type=email asp-for="UserLogin.Email" /><br>
    <label asp-for="UserLogin.Password">Password</label><br>
    <input type=password asp-for="UserLogin.Password" /><br>
    <br>
    <input type=submit value=OK><br>
    <p>First time to this site? <a href="/app/register">Register here!</a></p>
</form>

