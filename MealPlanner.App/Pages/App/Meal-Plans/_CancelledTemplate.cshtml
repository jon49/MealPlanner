@model ServerApp.Pages.App.Meal_Plans.MealViewModel

@{ 
    var startDate = Model.StartDate;
}

<div id=_@Model.Date data-highlight-draggable>
    <p draggable=true>&#8803; @Model.Date - @Model.DayOfWeek</p>
    <h2>No Recipe Chosen</h2>
    <form class=inline
          method=post
          asp-page-handler="AddRecipe"
          asp-route-id="@Model.Date"
          asp-route-startDate=@startDate>
        <input type=submit value="Add Recipe" autofocus>
    </form>
</div>
