{
  "name": "mealplanner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./public && mkdir -p ./public",
    "test": "npx ava build/**/*.spec.js",
    "test:watch": "npx ava --watch build/**/*.spec.js",
    "start": "npm run build",
    "tsc:watch": "npx tsc -w",
    "html:watch": "npx chokidar \"./src/**/*.html.js\" -c \"node ./scripts/build-html.js\"",
    "static:watch": "npx chokidar \"./src/**/*.(js|css|svg)\" -c \"npm run build:static\"",
    "rollup:watch": "npx rollup -c -w",
    "watch": "npm-run-all -s build -p tsc:watch html:watch static:watch test:watch",
    "serve": "http-server -p 5500 -c-1 -g ./public",
    "tsc": "npx tsc",
    "rollup": "npx rollup -c",
    "build:html": "node ./scripts/build-html.js",
    "build:static": "cd ./src; find . ! '(' -name '*.html.js' -o -path '*/layouts/*' ')' -name '*.js' -o -name '*.css' -o -name '*.svg' | cpio -pdm ../public; cd ..;",
    "build": "npm-run-all -s clean tsc build:html build:static",
    "build:external:rollup": "npx rollup -c",
    "build:external": "npm-run-all build:external:rollup"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.6",
    "idb": "^5.0.1",
    "stage0": "0.0.25"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-sucrase": "^3.0.1",
    "@types/node": "^12.12.30",
    "@types/service_worker_api": "0.0.9",
    "ava": "^3.5.0",
    "chokidar-cli": "^2.1.0",
    "http-server": "^0.12.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "typescript": "^3.8.3"
  }
}
