{
  "name": "mealplanner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./build & rm -rf ./public && mkdir -p ./build & mkdir -p ./public",
    "test": "npx ava build/**/*.spec.js",
    "test:watch": "npx ava --watch build/**/*.spec.js",
    "start:node": "nodemon ./dist/",
    "start": "npm run watch",
    "start:lambda": "netlify-lambda serve functions",
    "build:lambda": "netlify-lambda build functions",
    "tsc:watch": "npx tsc -w",
    "html:watch": "npx chokidar --initial \"./build/**/*.html.js\" -c \"node ./scripts/build-html.js {path}\"",
    "static:watch": "npx chokidar \"./src/**/*.(js|css)\" -c \"npm run build:static\"",
    "rollup:watch": "npx rollup -c -w",
    "watch": "npm-run-all -s build -p tsc:watch rollup:watch html:watch static:watch test:watch",
    "serve": "http-server -p 5500 -c-1 -g ./public",
    "tsc": "npx tsc",
    "rollup": "npx rollup -c",
    "build:html": "node ./scripts/build-html.js",
    "build:static": "cd ./src; find . -name '*.js' -o -name '*.css' | cpio -pdm ../public; cd ..;",
    "build": "npm-run-all -s clean tsc rollup build:html build:static test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.643.0",
    "glob": "^7.1.6",
    "idb": "^5.0.1",
    "stage0": "0.0.25"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^3.1.1",
    "@types/debounce": "^1.2.0",
    "@types/node": "^12.12.30",
    "ava": "^3.5.0",
    "chokidar-cli": "^2.1.0",
    "http-server": "^0.12.1",
    "netlify-lambda": "^1.6.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "typescript": "^3.8.3"
  }
}
